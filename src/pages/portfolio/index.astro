---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import { getPermalink } from '~/utils/permalinks';
import { Image } from 'astro:assets';

// Import category thumbnail images
import keychainImg from '~/assets/images/Gallery/keychain/1_keychain.JPG';
import bookmarkImg from '~/assets/images/Gallery/bookmarks/1_IMG_1438.jpg';
import cookieImg from '~/assets/images/Gallery/cookie_cutter/1_IMG_4620.jpg';
import mapImg from '~/assets/images/Gallery/maps_cityscapes/1_Lux_Ville.jpg';
import glowImg from '~/assets/images/Gallery/3d_photo/1_A_IMG_4199.jpg';
import electronicsImg from '~/assets/images/Gallery/electronics/1_lamp.jpg';
import magnetImg from '~/assets/images/Gallery/fridge_magnets/1_IMG_4307.jpg';
import customImg from '~/assets/images/Gallery/others/1_Thinker.jpg';

const metadata = {
  title: 'Portfolio - 3D Printed Products',
};

const categories = [
  {
    id: 'keychains',
    title: 'Keychains',
    icon: 'üîë',
    description: 'Custom keychains with NFC options, personalized designs, and your brand',
    image: keychainImg,
    variationCount: 6,
    slug: 'keychains',
  },
  {
    id: 'bookmarks',
    title: 'Bookmarks',
    icon: 'üìñ',
    description: 'Unique bookmarks with custom text, decorative designs, and themed styles',
    image: bookmarkImg,
    variationCount: 7,
    slug: 'bookmarks',
  },
  {
    id: 'cookie-cutters',
    title: 'Cookie Cutters',
    icon: 'üç™',
    description: 'Food-safe cookie cutters in any shape or design you can imagine',
    image: cookieImg,
    variationCount: 5,
    slug: 'cookie-cutters',
  },
  {
    id: 'maps',
    title: '3D Maps & Cityscapes',
    icon: 'üó∫Ô∏è',
    description: 'Stunning 3D topographical maps and cityscape models of your favorite places',
    image: mapImg,
    variationCount: 2,
    slug: 'maps-cityscapes',
  },
  {
    id: 'glow-photos',
    title: '3D Glow Photos',
    icon: '‚ú®',
    description: 'Transform your photos into stunning glow-in-the-dark 3D art pieces',
    image: glowImg,
    variationCount: 5,
    slug: 'glow-photos',
  },
  {
    id: 'electronics',
    title: 'Electronics & Lightboxes',
    icon: 'üí°',
    description: 'LED lamps, lightboxes, smart accessories, and tech-integrated designs',
    image: electronicsImg,
    variationCount: 7,
    slug: 'electronics',
  },
  {
    id: 'fridge-magnets',
    title: 'Fridge Magnets',
    icon: 'üß≤',
    description: 'Custom fridge magnets in any design - perfect for gifts and branding',
    image: magnetImg,
    variationCount: 3,
    slug: 'fridge-magnets',
  },
  {
    id: 'custom',
    title: 'Custom Creations',
    icon: 'üé®',
    description: 'From sculptures to decor - if you can dream it, we can print it',
    image: customImg,
    variationCount: 4,
    slug: 'custom',
  },
];
---

<Layout metadata={metadata}>
  <Hero>
    <Fragment slot="title">
      Our Portfolio
    </Fragment>
    <Fragment slot="subtitle">
      Explore our collection of 3D printed products. Click any category to see variations and examples.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-b from-primary/10 to-transparent dark:from-primary/20"></div>
    </Fragment>
  </Hero>

  <!-- Categories Grid -->
  <section class="py-16 md:py-20 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <!-- Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map((category) => (
          <a 
            href={getPermalink(`/portfolio/${category.slug}`)}
            class="category-card group block bg-white dark:bg-slate-800 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2"
          >
            <!-- Image -->
            <div class="relative aspect-[4/3] overflow-hidden bg-gray-100 dark:bg-slate-700">
              <Image 
                src={category.image} 
                alt={category.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                widths={[400, 768]}
                sizes="(max-width: 768px) 100vw, 400px"
              />

            </div>

            <!-- Content -->
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-3 text-gray-900 dark:text-gray-100 group-hover:text-primary transition-colors">
                {category.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                {category.description}
              </p>
              
              <!-- CTA -->
              <div class="flex items-center text-primary font-semibold group-hover:gap-3 transition-all">
                <span>View Gallery</span>
                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Custom CTA Section -->
      <div class="mt-20 text-center bg-gradient-to-r from-primary/10 to-secondary/10 dark:from-primary/20 dark:to-secondary/20 rounded-2xl p-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">
          Have a Unique Idea?
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          Don't see what you're looking for? We specialize in bringing custom ideas to life. Let's discuss your project!
        </p>
        <a 
          href={getPermalink('/contact')}
          class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl"
        >
          <span>Get in Touch</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .category-card {
    cursor: pointer;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
