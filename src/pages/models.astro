---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import ImageComparisonSlider from '~/components/widgets/ImageComparisonSlider.astro';

const metadata = {
  title: '3D Models â€” tattva-3d',
};

// Updated model projects to match your actual business
const modelProjects = [
  {
    id: 'custom-gift',
    title: 'Personalized Gift Item',
    description: 'Custom 3D printed gift with personal touches and unique design. Drag the slider to see how we transform your idea into a beautiful, tangible keepsake.',
    beforeImage: 'https://images.unsplash.com/photo-1578662996442-48f60103fc96?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    afterImage: 'https://images.unsplash.com/photo-1581833971358-2c8b550f87b3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
  },
  {
    id: 'business-keychain',
    title: 'Business Promotional Keychain',
    description: 'Custom branded keychain for business promotion. Compare the digital design with the finished product showing crisp details and professional quality.',
    beforeImage: 'https://images.unsplash.com/photo-1581092160562-40aa08e78837?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    afterImage: 'https://images.unsplash.com/photo-1578321272176-b7bbc0679853?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
  },
  {
    id: 'city-miniature',
    title: 'Miniature City Map',
    description: 'Custom miniature representing a special location or city. See how we capture intricate details from digital maps into physical collectibles.',
    beforeImage: 'https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    afterImage: 'https://images.unsplash.com/photo-1565191999001-551c187427bb?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
  },
  {
    id: 'photo-art',
    title: '3D Filament Art from Photo',
    description: 'Transform your favorite photo into unique 3D filament artwork. Drag to compare the original concept with the stunning 3D printed result.',
    beforeImage: 'https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    afterImage: 'https://images.unsplash.com/photo-1573164713714-d95e436ab8d6?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
  },
  {
    id: 'display-logo',
    title: 'Custom Display Logo',
    description: 'Professional business display piece with integrated lighting. Compare the digital design with the finished lightbox showing excellent build quality.',
    beforeImage: 'https://images.unsplash.com/photo-1559085153-6e4ad5e6b0ed?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    afterImage: 'https://images.unsplash.com/photo-1578321272176-b7bbc0679853?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
  },
  {
    id: 'memorial-keepsake',
    title: 'Memorial Keepsake',
    description: 'Special commemorative piece preserving precious memories. See how we handle delicate projects with care and attention to meaningful details.',
    beforeImage: 'https://images.unsplash.com/photo-1578662996442-48f60103fc96?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    afterImage: 'https://images.unsplash.com/photo-1573408301185-9146fe634ad0?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
  }
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">3D Models</Fragment>
    <Fragment slot="subtitle">
      From Digital Idea to Physical Reality. Explore our custom 3D printing work through 
      interactive before/after comparisons. Drag the sliders to see how we bring your creative ideas to life.
    </Fragment>
  </Hero>

  <!-- Instructions Section ********* -->
  <section class="py-8 bg-blue-50 dark:bg-slate-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <div class="flex items-center justify-center mb-4">
        <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">How to Use</h3>
      </div>
      <p class="text-gray-600 dark:text-gray-300">
        <strong>Desktop:</strong> Click and drag the slider or click anywhere on the image to move it. 
        <strong>Mobile:</strong> Touch and drag the slider to compare the digital design with the finished piece.
      </p>
    </div>
  </section>

  <!-- 3D Models Comparison Section *** -->
  <section class="py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          From Idea to Reality
        </h2>
        <p class="text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
          See the quality and attention to detail in our custom 3D printing work. Each comparison shows the 
          digital concept on the left and the beautiful finished piece on the right.
        </p>
      </div>

      <!-- Models Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {modelProjects.map((project) => (
          <ImageComparisonSlider
            id={project.id}
            title={project.title}
            description={project.description}
            beforeImage={project.beforeImage}
            afterImage={project.afterImage}
            beforeLabel="Digital Design"
            afterLabel="Finished Piece"
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section *************** -->
  <section class="py-16 md:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          How We Create Your Project
        </h2>
        <p class="text-xl text-muted dark:text-slate-300">
          Simple steps from your idea to a beautiful finished piece
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Step 1 -->
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
            <span class="text-2xl font-bold text-blue-600">1</span>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-900 dark:text-white">Share Your Idea</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Tell us about your project - whether it's a gift, business item, or creative piece
          </p>
        </div>

        <!-- Step 2 -->
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
            <span class="text-2xl font-bold text-green-600">2</span>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-900 dark:text-white">We Design & Print</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Our team creates the digital model and carefully 3D prints your unique piece
          </p>
        </div>

        <!-- Step 3 -->
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center">
            <span class="text-2xl font-bold text-purple-600">3</span>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-900 dark:text-white">You Receive & Enjoy</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Get your finished piece ready to gift, display, or use for your business
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action *************** -->
  <section class="py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg p-8 text-white">
        <h2 class="text-3xl font-bold mb-4">
          Ready to Create Something Special?
        </h2>
        <p class="text-xl mb-6 opacity-90">
          Whether it's a personalized gift, business promotional item, or creative keepsake, 
          let's bring your vision to life with 3D printing.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/t-3d/contact"
            class="inline-flex items-center px-6 py-3 border border-white text-base font-medium rounded-lg text-blue-600 bg-white hover:bg-gray-50 transition duration-150"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-4.126-.964L3 20l1.036-6.874A8.955 8.955 0 013 9c0-4.418 3.582-8 8-8s8 3.582 8 8z"></path>
            </svg>
            Share Your Idea
          </a>
          <a 
            href="mailto:t-3d@ik.me?subject=Custom 3D Print Request&body=Hi,%0D%0A%0D%0AI'm interested in creating a custom 3D printed item.%0D%0A%0D%0AProject details:%0D%0A- Type: (gift/business item/creative piece)%0D%0A- Description: %0D%0A- Occasion/Purpose: %0D%0A%0D%0APlease let me know the next steps!%0D%0A%0D%0AThanks!"
            class="inline-flex items-center px-6 py-3 border border-white text-base font-medium rounded-lg text-white hover:bg-white hover:bg-opacity-10 transition duration-150"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Email Us
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>