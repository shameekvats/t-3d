    variationCount: 5,
  },
  {
    id: 'magnets',
    title: 'Fridge Magnets',
    icon: 'üß≤',
    heroImage: bunny.src,
    description: 'Custom fridge magnets for your home or business',
    tagline: 'Stick your memories on display',
    variations: [
      { image: bunny.src, title: 'Character Magnets', description: 'Fun characters for your fridge' },
      { image: ghost.src, title: 'Seasonal Magnets', description: 'Holiday and seasonal designs' },
    ],
    features: ['Custom names', 'Photo magnets', 'Logo magnets', 'Fun shapes', 'Strong magnetic hold'],
    variationCount: 5,
  },
  {
    id: 'bookmarks',
    title: 'Bookmarks',
    icon: 'üìñ',
    heroImage: catBookmark.src,
