    tagline: 'Never lose your page in style',
    variations: [
      { image: catBookmark.src, title: 'Character Bookmarks', description: 'Fun designs for book lovers' },
    ],
    features: ['Custom names', 'Image designs', 'Brand logos', 'Unique shapes', 'Design your own'],
