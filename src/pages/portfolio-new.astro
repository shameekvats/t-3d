      { image: halloweenMask.src, title: 'Costumes', description: 'Masks and accessories' },
      { image: beatlesDecor.src, title: 'Wall Decor', description: 'Custom wall art' },
      { image: vase.src, title: 'Home Items', description: 'Functional and decorative' },
    ],
    features: ['Architectural models', 'Art reproductions', 'Costume pieces', 'Home decor', 'Custom concepts', 'Prototype your ideas'],
    variationCount: 6,
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero>
    <Fragment slot="title">
      What We Create
    </Fragment>
    <Fragment slot="subtitle">
      From personalized keychains to glowing art ‚Äî discover our range of custom 3D printed products
    </Fragment>
    
    <!-- Background Image -->
    <Fragment slot="bg">
      <div class="absolute inset-0 overflow-hidden">
        <img
          src="/images/Stand_holder.jpg"
          alt="3D Printed Stand Holder"
          class="hero-bg-image"
        />
        <div class="absolute inset-0 hero-overlay-light dark:hero-overlay-dark"></div>
      </div>
    </Fragment>
  </Hero>

  <!-- Product Categories Grid -->
  <section class="py-16 md:py-20 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Browse our product categories and click to explore variations
        </p>
      </div>

      <!-- Product Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {productCategories.map((product) => (
          <div class="product-card group" data-category-id={product.id}>
            <!-- Card Image -->
            <div class="relative aspect-[4/3] overflow-hidden rounded-t-xl bg-gray-100 dark:bg-slate-800">
              <img 
                src={product.heroImage} 
                alt={product.title}
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
              />
              <!-- Variation Count Badge -->
              <div class="absolute top-4 right-4 bg-primary text-white px-3 py-1 rounded-full text-sm font-semibold shadow-lg">
                {product.variationCount} options
              </div>
              <!-- Icon Badge -->
              <div class="absolute top-4 left-4 text-4xl">
                {product.icon}
              </div>
            </div>

            <!-- Card Content -->
            <div class="bg-white dark:bg-slate-800 p-6 rounded-b-xl shadow-md group-hover:shadow-xl transition-shadow duration-300">
              <h3 class="text-2xl font-bold mb-2 text-gray-900 dark:text-gray-100 group-hover:text-primary transition-colors">
                {product.title}
              </h3>
              <p class="text-sm text-primary font-medium mb-3 italic">
                {product.tagline}
              </p>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                {product.description}
              </p>
              
              <!-- View Details Button -->
              <button 
                class="view-details-btn w-full py-3 px-4 bg-gray-100 dark:bg-slate-700 hover:bg-primary hover:text-white dark:hover:bg-primary text-gray-900 dark:text-gray-100 rounded-lg font-semibold transition-all duration-300 flex items-center justify-center gap-2 group-hover:bg-primary group-hover:text-white"
                aria-label={`View ${product.title} options`}
              >
                <span>Explore Options</span>
                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
            </div>
          </div>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="mt-16 text-center">
        <div class="bg-gradient-to-r from-primary/10 to-secondary/10 dark:from-primary/20 dark:to-secondary/20 rounded-2xl p-8 md:p-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">
            Have a Custom Idea?
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
            Don't see exactly what you're looking for? We love bringing unique ideas to life. Share your vision with us!
          </p>
          <a 
            href={getPermalink('/contact')}
            class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white font-semibold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
          >
            <span>Get in Touch</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Modal Container -->
  <div id="product-modal" class="modal-overlay hidden">
    <div class="modal-container">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <div class="flex items-center gap-3">
            <span class="modal-icon text-4xl"></span>
            <h2 class="modal-title text-3xl font-bold text-gray-900 dark:text-gray-100"></h2>
          </div>
          <button class="modal-close" aria-label="Close modal">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Modal Body -->
        <div class="modal-body">
          <p class="modal-tagline text-lg text-primary font-medium italic mb-4"></p>
          <p class="modal-description text-gray-600 dark:text-gray-400 mb-8"></p>

          <!-- Features List -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-gray-100">Options Available:</h3>
            <ul class="modal-features grid grid-cols-1 md:grid-cols-2 gap-3"></ul>
          </div>

          <!-- Variations Gallery -->
          <div>
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-gray-100">Examples:</h3>
            <div class="modal-gallery grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"></div>
          </div>
        </div>

        <!-- Modal Footer -->
        <div class="modal-footer">
          <a 
            href={getPermalink('/contact')}
            class="w-full md:w-auto inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-semibold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105"
          >
            <span>Order This Product</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Product Card Styles */
  .product-card {
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
  }

  /* Modal Styles */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.75);
    backdrop-filter: blur(4px);
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .modal-overlay.active {
    display: flex;
    opacity: 1;
  }

  .modal-container {
    width: 100%;
    max-width: 1200px;
    max-height: 90vh;
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  .modal-overlay.active .modal-container {
    transform: scale(1);
  }

  .modal-content {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    max-height: 90vh;
    display: flex;
    flex-direction: column;
  }

  :global(.dark) .modal-content {
    background: rgb(30 41 59);
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    border-bottom: 1px solid #e5e7eb;
    flex-shrink: 0;
  }

  :global(.dark) .modal-header {
    border-bottom-color: rgb(51 65 85);
  }

  .modal-close {
    padding: 0.5rem;
    border-radius: 0.5rem;
    transition: all 0.2s;
    color: #6b7280;
  }

  .modal-close:hover {
    background: #f3f4f6;
    color: #111827;
  }

  :global(.dark) .modal-close:hover {
    background: rgb(51 65 85);
    color: white;
  }

  .modal-body {
    padding: 2rem;
    overflow-y: auto;
    flex: 1;
  }

  .modal-footer {
    padding: 1.5rem 2rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    justify-content: flex-end;
    flex-shrink: 0;
  }

  :global(.dark) .modal-footer {
    border-top-color: rgb(51 65 85);
  }

  .modal-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    background: #f3f4f6;
    border-radius: 0.5rem;
    color: #374151;
  }

  :global(.dark) .modal-features li {
    background: rgb(51 65 85);
    color: rgb(209 213 219);
  }

  .modal-features li::before {
    content: '‚úì';
    color: rgb(var(--color-primary));
    font-weight: bold;
    font-size: 1.25rem;
  }

  .modal-gallery-item {
    border-radius: 0.75rem;
    overflow: hidden;
    background: #f9fafb;
  }

  :global(.dark) .modal-gallery-item {
    background: rgb(51 65 85);
  }

  .modal-gallery-item img {
    width: 100%;
    aspect-ratio: 4/3;
    object-fit: cover;
  }

  .modal-gallery-item-title {
    padding: 1rem;
    font-weight: 600;
    color: #111827;
  }

  :global(.dark) .modal-gallery-item-title {
    color: rgb(243 244 246);
  }

  .modal-gallery-item-desc {
    padding: 0 1rem 1rem;
    font-size: 0.875rem;
    color: #6b7280;
  }

  :global(.dark) .modal-gallery-item-desc {
    color: rgb(156 163 175);
  }

  /* Hero background image styling */
  .hero-bg-image {
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    transition: opacity 0.3s ease;
  }

  :root .hero-bg-image {
    opacity: 0.25;
  }

  :root.dark .hero-bg-image {
    opacity: 0.4;
  }

  @media (max-width: 768px) {
    .hero-bg-image {
      opacity: 0.2 !important;
    }
  }

  .hero-overlay-light {
    background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(0,0,0,0.3) 100%);
  }

  .hero-overlay-dark {
    background: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.6) 100%);
  }
</style>

<script define:vars={{ productCategories }}>
  // Modal functionality
  const modal = document.getElementById('product-modal');
  const modalClose = document.querySelector('.modal-close');
  const productCards = document.querySelectorAll('.product-card');

  // Open modal
  productCards.forEach(card => {
    card.addEventListener('click', () => {
      const categoryId = card.dataset.categoryId;
      const product = productCategories.find(p => p.id === categoryId);
      
      if (product) {
        // Populate modal
        document.querySelector('.modal-icon').textContent = product.icon;
        document.querySelector('.modal-title').textContent = product.title;
        document.querySelector('.modal-tagline').textContent = product.tagline;
        document.querySelector('.modal-description').textContent = product.description;
        
        // Populate features
        const featuresList = document.querySelector('.modal-features');
        featuresList.innerHTML = product.features.map(feature => 
          `<li>${feature}</li>`
        ).join('');
        
        // Populate gallery
        const gallery = document.querySelector('.modal-gallery');
        gallery.innerHTML = product.variations.map(variation => `
          <div class="modal-gallery-item">
            <img src="${variation.image}" alt="${variation.title}" />
            <div class="modal-gallery-item-title">${variation.title}</div>
            <div class="modal-gallery-item-desc">${variation.description}</div>
          </div>
        `).join('');
        
        // Show modal
        modal.classList.remove('hidden');
        setTimeout(() => modal.classList.add('active'), 10);
        document.body.style.overflow = 'hidden';
      }
    });
  });

  // Close modal
  function closeModal() {
    modal.classList.remove('active');
    setTimeout(() => {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }, 300);
  }

  modalClose?.addEventListener('click', closeModal);
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal.classList.contains('active')) {
      closeModal();
    }
  });
</script>
