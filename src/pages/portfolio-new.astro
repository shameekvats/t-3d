    tagline: 'Bake your creativity',
    variations: [
      { image: cookieCutter1.src, title: 'Custom Shapes', description: 'Any design you dream up' },
      { image: cookieCutter2.src, title: 'Screenshot to Cutter', description: 'Turn images into cookie cutters' },
      { image: cookieCutter5.src, title: 'Precision Design', description: 'Clean cuts every time' },
    ],
