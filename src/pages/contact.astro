---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Contact ‚Äî tattva-3d',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">Get in touch</Fragment>
    <Fragment slot="subtitle">
      Ready to bring your ideas to life?
    </Fragment>
  </Hero>

  <!-- Contact Form Section *********** -->
  <section class="py-16 md:py-20 bg-gray-50 dark:bg-slate-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold mb-4">Send us a message</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Fill out the form and we'll get back to you soon!
        </p>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg p-8">
        <form action="https://formspree.io/f/mzzazwro" method="POST" id="contactForm">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <!-- Name Field -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white"
                placeholder="Your name"
              />
            </div>

            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white"
                placeholder="your.email@example.com"
              />
            </div>
          </div>

          <!-- Subject Field -->
          <div class="mb-6">
            <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Project Type *
            </label>
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white"
            >
              <option value="">What do you need?</option>
              <option value="Custom 3d Print">Custom 3d Print</option>
              <option value="Design Help">Design Help</option>
              <option value="Quote Request">Quote Request</option>
              <option value="General Question">General Question</option>
            </select>
          </div>

          <!-- Message Field -->
          <div class="mb-6">
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Tell us about your project *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white resize-vertical"
              placeholder="What do you want to create? Do you have files ready? Any specific requirements? For large files, please mention them and we'll provide sharing instructions."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <button
              type="submit"
              class="inline-flex items-center px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-200 shadow-lg hover:shadow-xl disabled:opacity-50"
              id="submitButton"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              <span id="buttonText">Send Message</span>
            </button>
          </div>

          <!-- Success Message -->
          <div id="successMessage" class="hidden mt-6 p-4 bg-green-50 dark:bg-green-900 border border-green-200 dark:border-green-700 rounded-lg">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-green-700 dark:text-green-300">
                Thanks! Your message has been sent. We'll get back to you soon!
              </p>
            </div>
          </div>
        </form>

        <!-- File Sharing Instructions -->
        <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="bg-blue-50 dark:bg-blue-900 rounded-lg p-4 mb-4">
            <h3 class="text-lg font-medium text-blue-900 dark:text-blue-100 mb-2">
              üìÅ Need to share files?
            </h3>
            <p class="text-sm text-blue-700 dark:text-blue-300">
              For STL files, reference images, or design files, you can:
            </p>
            <ul class="text-sm text-blue-700 dark:text-blue-300 mt-2 space-y-1">
              <li>‚Ä¢ <strong>Email directly:</strong> Send files to t-3d@ik.me</li>
              <li>‚Ä¢ <strong>Cloud sharing:</strong> Share Google Drive or Dropbox links in your message</li>
              <li>‚Ä¢ <strong>Mention files:</strong> Let us know what you have and we'll guide you</li>
            </ul>
          </div>
        </div>

        <!-- Direct Email Option -->
        <div class="text-center">
          <p class="text-gray-600 dark:text-gray-300">
            Or email us directly at: 
            <a href="mailto:t-3d@ik.me" class="text-blue-600 hover:text-blue-800 font-medium">t-3d@ik.me</a>
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const contactForm = document.getElementById('contactForm');
  const successMessage = document.getElementById('successMessage');
  const submitButton = document.getElementById('submitButton');
  const buttonText = document.getElementById('buttonText');

  contactForm.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    // Show loading state
    submitButton.disabled = true;
    buttonText.textContent = 'Sending...';
    
    // Hide previous messages
    successMessage.classList.add('hidden');

    try {
      const response = await fetch(contactForm.action, {
        method: 'POST',
        body: new FormData(contactForm),
        headers: {
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        successMessage.classList.remove('hidden');
        contactForm.reset();
        successMessage.scrollIntoView({ behavior: 'smooth' });
      } else {
        alert('Sorry, there was an error sending your message. Please try again.');
      }
    } catch (error) {
      alert('Sorry, there was an error sending your message. Please try again.');
    }

    // Reset button state
    submitButton.disabled = false;
    buttonText.textContent = 'Send Message';
  });
});
</script>
