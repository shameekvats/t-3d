---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import ImageComparisonSlider from '~/components/widgets/ImageComparisonSlider.astro';
import { getPermalink } from '~/utils/permalinks';

// Import your before/after images
import warriorsBefore from '../assets/images/Models/Before/Warriors_3d.png';
import warriorsAfter from '../assets/images/Models/After/Warriors.jpg';
import keychainBefore from '../assets/images/Models/Before/BM_Keychain_3d.png';
import keychainAfter from '../assets/images/Models/After/BM_Keychain.jpg';
import vaseBefore from '../assets/images/Models/Before/Vase_3d.png';
import vaseAfter from '../assets/images/Models/After/Vase.jpg';
import membershipBefore from '../assets/images/Models/Before/BM_Membership_3d.png';
import membershipAfter from '../assets/images/Models/After/BM_Membership.jpg';

// Add more imports as needed...

const metadata = {
  title: '3d Models — tattva-3d',
};

// Updated model projects to match your actual business
const modelProjects = [
  {
    id: 'business-keychain',
    title: 'Business Keychain',
    description: 'Beyond Music Keychain',
    beforeImage: keychainBefore.src,
    afterImage: keychainAfter.src,
  },
  {
    id: 'memorial-keepsake',
    title: 'Warriors Cricket Club logo',
    description: 'Warriors CC Keepsakes',
    beforeImage: warriorsBefore.src,
    afterImage: warriorsAfter.src,
  },
    {
    id: 'home-decor',
    title: 'Vase',
    description: 'Customizable Vase or similar',
    beforeImage: vaseBefore.src,
    afterImage: vaseAfter.src,
  },
  {
    id: 'business-membership',
    title: 'Business Card',
    description: 'Business Membership Card',
    beforeImage: membershipBefore.src,
    afterImage: membershipAfter.src,
  }
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">3d Models</Fragment>
    <Fragment slot="subtitle">
      From digital idea to physical reality!
    </Fragment>
  </Hero>

  <!-- Models Grid Section ********** -->
  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      
      <!-- Clean Models Grid - Matching Gallery Style -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {modelProjects.map((project) => (
          <div class="group relative bg-white dark:bg-slate-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <!-- Image Comparison Container -->
            <div class="aspect-video overflow-hidden">
              <ImageComparisonSlider
                id={project.id}
                title={project.title}
                description={project.description}
                beforeImage={project.afterImage}   // ← Swapped
                afterImage={project.beforeImage}   // ← Swapped
                beforeLabel="Design"
                afterLabel="Result"
              />
            </div>
            
            <!-- Content Overlay - Matching Gallery Style -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                <h3 class="font-semibold text-xl mb-2">
                  {project.title}
                </h3>
                <p class="text-sm text-gray-200">
                  {project.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Simple Process Section - Minimal -->
  <section class="py-16 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">
          How It Works
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Simple steps from idea to reality
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Step 1 -->
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
            <span class="text-lg font-bold text-blue-600">1</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Share Your Idea</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Tell us what you want to create
          </p>
        </div>

        <!-- Step 2 -->
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
            <span class="text-lg font-bold text-green-600">2</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">We Design & Print</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            We create and 3d print your piece
          </p>
        </div>

        <!-- Step 3 -->
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center">
            <span class="text-lg font-bold text-purple-600">3</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">You Receive & Enjoy</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Get your finished project delivered
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action - Matching Gallery Style -->
  <section class="py-16 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-slate-800 dark:to-slate-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        Ready to create something special?
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        Whether it's a gift, business item, or creative piece - let's make it happen together!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href={getPermalink('/contact')}
          class="inline-flex items-center px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-4.126-.964L3 20l1.036-6.874A8.955 8.955 0 013 9c0-4.418 3.582-8 8-8s8 3.582 8 8z"></path>
          </svg>
          Let's Chat
        </a>
        <a 
          href="mailto:t-3d@ik.me?subject=Custom Project Idea&body=Hi!%0D%0A%0D%0AI have a cool idea for a 3d print:%0D%0A%0D%0A[Describe your idea here]%0D%0A%0D%0ALooking forward to hearing from you!"
          class="inline-flex items-center px-8 py-3 bg-white hover:bg-gray-50 text-gray-700 font-medium rounded-lg border border-gray-200 transition duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Send Email
        </a>
      </div>
    </div>
  </section>
</Layout>