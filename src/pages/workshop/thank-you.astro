---
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Registration Confirmed â€” tattva-3d Workshop',
  description: 'Thank you for registering for our 3D printing workshop.',
};
---

<Layout metadata={metadata}>
  <section class="py-20 md:py-32 bg-gradient-to-br from-white to-gray-50 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <!-- Success Icon -->
      <div class="mb-8">
        <div class="w-24 h-24 mx-auto bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      </div>

      <!-- Success Message -->
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-gray-100">
        You're All Set! ðŸŽ‰
      </h1>
      
      <div class="max-w-2xl mx-auto mb-8">
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-4">
          Thank you for registering for the 3D Printing Workshop!
        </p>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          You'll receive a confirmation email shortly with:
        </p>
      </div>

      <!-- What's Next -->
      <div class="max-w-2xl mx-auto mb-12">
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg p-8 text-left">
          <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-gray-100 text-center">
            What Happens Next?
          </h2>
          <ul class="space-y-4">
            <li class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center mr-4">
                <span class="text-primary font-semibold">1</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">Confirmation Email</h3>
                <p class="text-gray-600 dark:text-gray-400">Check your inbox for a confirmation email with all the workshop details</p>
              </div>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center mr-4">
                <span class="text-primary font-semibold">2</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">Location Details</h3>
                <p class="text-gray-600 dark:text-gray-400">The exact workshop address will be shared 48 hours before the event</p>
              </div>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center mr-4">
                <span class="text-primary font-semibold">3</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">Reminder</h3>
                <p class="text-gray-600 dark:text-gray-400">We'll send you a reminder email one day before the workshop</p>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <!-- Important Note -->
      <div class="max-w-2xl mx-auto mb-12 p-6 bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-500 rounded-lg text-left">
        <h3 class="font-semibold text-blue-900 dark:text-blue-300 mb-2 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          Important Note
        </h3>
        <p class="text-blue-800 dark:text-blue-200">
          Didn't receive the email? Check your spam folder or contact us at <a href="mailto:info@tattva-3d.com" class="underline hover:text-blue-600">info@tattva-3d.com</a>
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href={getPermalink('/')}
          class="inline-flex items-center justify-center px-8 py-3 rounded-lg bg-primary hover:bg-primary-dark text-white font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Back to Home
        </a>
        <a 
          href={getPermalink('/portfolio')}
          class="inline-flex items-center justify-center px-8 py-3 rounded-lg bg-gray-200 hover:bg-gray-300 dark:bg-slate-700 dark:hover:bg-slate-600 text-gray-900 dark:text-gray-100 font-semibold transition-all duration-300"
        >
          View Our Work
        </a>
      </div>

      <!-- Social Share (optional) -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          Know someone who'd love this workshop? Share it with them!
        </p>
        <div class="flex gap-4 justify-center">
          <a 
            href="https://www.instagram.com/tattva.3d/" 
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 flex items-center justify-center rounded-full bg-gradient-to-br from-purple-600 via-pink-600 to-orange-500 text-white hover:opacity-80 transition-opacity"
            aria-label="Follow on Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
