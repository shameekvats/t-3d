---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import ImageComparisonSlider from '~/components/widgets/ImageComparisonSlider.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Portfolio — tattva-3d',
  description: 'Explore our custom 3D modeling and printing portfolio - from digital designs to finished products.',
};

// Import 3D Model comparison images (Before/After)
import warriorsBefore from '../assets/images/Models/Before_Warriors_3d.png';
import warriorsAfter from '../assets/images/Models/After_Warriors.jpg';
import keychainBefore from '../assets/images/Models/Before_BM_Keychain_3d.png';
import keychainAfter from '../assets/images/Models/After_BM_Keychain.jpg';
import vaseBefore from '../assets/images/Models/Before_Vase_3d.png';
import vaseAfter from '../assets/images/Models/After_Vase.jpg';
import membershipBefore from '../assets/images/Models/Before_BM_Membership_3d.png';
import membershipAfter from '../assets/images/Models/After_BM_Membership.jpg';

// Import gallery images (Finished products)
import asRomaLightbox from '../assets/images/Gallery/AS Roma_Lightbox.jpg';
import bunny from '../assets/images/Gallery/Bunny.jpg';
import catBookmark from '../assets/images/Gallery/Cat_Sticker_Bookmark.jpeg';
import colosseum from '../assets/images/Gallery/Colosseum.jpg';
import cookieCutter from '../assets/images/Gallery/Cookie_Cutter5.jpg';
import filamentPainting from '../assets/images/Gallery/Filament_Painting.jpg';
import filamentPaintingGlow from '../assets/images/Gallery/Filament_Painting_Glow.jpg';
import ghost from '../assets/images/Gallery/Ghost.jpg';
import halloweenMask from '../assets/images/Gallery/Haloween_Mask.jpg';
import lightboxLowKey from '../assets/images/Gallery/Lightbox_LowKey.JPG';
import mouse from '../assets/images/Gallery/Mouse.jpg';
import taj from '../assets/images/Gallery/Taj1.jpg';
import thinker from '../assets/images/Gallery/Thinker.jpg';
import beatlesDecor from '../assets/images/Gallery/beatles_Decor.jpeg';
import keychain from '../assets/images/Gallery/keychain.JPG';

// 3D Modeling Projects (Before/After comparisons)
const modelProjects = [
  {
    id: 'business-keychain',
    title: 'Business Keychain',
    description: 'Beyond Music branded keychain from concept to reality',
    beforeImage: keychainBefore.src,
    afterImage: keychainAfter.src,
    categories: ['business', 'gifts'],
  },
  {
    id: 'warriors-logo',
    title: 'Warriors Cricket Club Logo',
    description: 'Custom sports team logo keepsake',
    beforeImage: warriorsBefore.src,
    afterImage: warriorsAfter.src,
    categories: ['gifts', 'art'],
  },
  {
    id: 'decorative-vase',
    title: 'Decorative Vase',
    description: 'Customizable geometric vase design',
    beforeImage: vaseBefore.src,
    afterImage: vaseAfter.src,
    categories: ['home', 'art'],
  },
  {
    id: 'business-card',
    title: 'Business Membership Card',
    description: 'Premium textured business cards',
    beforeImage: membershipBefore.src,
    afterImage: membershipAfter.src,
    categories: ['business'],
  }
];

// Gallery Items (Finished products)
const galleryItems = [
  {
    src: asRomaLightbox.src,
    alt: 'AS Roma custom lightbox display',
    title: 'AS Roma Lightbox',
    categories: ['gifts', 'custom'],
  },
  {
    src: lightboxLowKey.src,
    alt: 'Low Key custom lightbox with LED lighting',
    title: 'Low Key Lightbox',
    categories: ['business', 'gifts', 'custom'],
  },
  {
    src: keychain.src,
    alt: 'Custom branded keychain',
    title: 'Custom Keychain',
    categories: ['gifts', 'business'],
  },
  {
    src: colosseum.src,
    alt: 'Colosseum architectural model',
    title: 'Colosseum Model',
    categories: ['art', 'home'],
  },
  {
    src: taj.src,
    alt: 'Taj Mahal architectural miniature',
    title: 'Taj Mahal Miniature',
    categories: ['art', 'home'],
  },
  {
    src: thinker.src,
    alt: 'The Thinker sculpture replica',
    title: 'The Thinker',
    categories: ['art', 'home'],
  },
  {
    src: beatlesDecor.src,
    alt: 'Beatles themed wall decor',
    title: 'Beatles Wall Art',
    categories: ['art', 'home'],
  },
  {
    src: filamentPainting.src,
    alt: 'Custom filament art painting',
    title: 'Filament Painting',
    categories: ['art', 'gifts', 'custom'],
  },
  {
    src: filamentPaintingGlow.src,
    alt: 'Glow-in-dark filament painting',
    title: 'Glow Filament Art',
    categories: ['art', 'gifts', 'custom'],
  },
  {
    src: catBookmark.src,
    alt: 'Cat sticker and bookmark set',
    title: 'Cat Bookmark Set',
    categories: ['gifts', 'art'],
  },
  {
    src: bunny.src,
    alt: 'Custom bunny figurine',
    title: 'Bunny Figurine',
    categories: ['gifts', 'home'],
  },
  {
    src: ghost.src,
    alt: 'Ghost decoration piece',
    title: 'Ghost Decor',
    categories: ['gifts', 'home'],
  },
  {
    src: halloweenMask.src,
    alt: 'Custom Halloween mask',
    title: 'Halloween Mask',
    categories: ['gifts', 'custom'],
  },
  {
    src: cookieCutter.src,
    alt: 'Custom cookie cutter design',
    title: 'Cookie Cutter',
    categories: ['home', 'gifts'],
  },
  {
    src: mouse.src,
    alt: 'Custom wireless mouse design',
    title: 'Custom Mouse',
    categories: ['custom'],
  }
];

// Category definitions
const categories = [
  { id: 'all', name: 'All' },
  { id: 'gifts', name: 'Gifts & Accessories' },
  { id: 'business', name: 'Business/Brand Solutions' },
  { id: 'home', name: 'Home & Kitchen' },
  { id: 'art', name: 'Art & Decor' },
  { id: 'custom', name: 'Custom Projects' }
];

// Calculate item counts per category
function getCategoryCount(categoryId: string) {
  if (categoryId === 'all') {
    return modelProjects.length + galleryItems.length;
  }
  const modelCount = modelProjects.filter(item => item.categories.includes(categoryId)).length;
  const galleryCount = galleryItems.filter(item => item.categories.includes(categoryId)).length;
  return modelCount + galleryCount;
}
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">
      Our Work
    </Fragment>
    <Fragment slot="subtitle">
      From digital design to physical reality — explore our custom 3D modeling capabilities and finished creations
    </Fragment>
  </Hero>

  <!-- Category Filter Section *************** -->
  <section class="py-8 bg-white dark:bg-slate-900 sticky top-0 z-30 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-center gap-3 flex-wrap">
        <span class="text-sm font-medium text-gray-600 dark:text-gray-400 hidden sm:inline">
          Filter by:
        </span>
        <div class="flex items-center gap-2 flex-wrap justify-center" id="category-filters">
          {categories.map((category) => (
            <button
              data-category={category.id}
              class="category-filter inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 hover:scale-105 hover:shadow-md"
              class:list={[
                category.id === 'all' 
                  ? 'bg-primary text-white shadow-lg' 
                  : 'bg-gray-100 dark:bg-slate-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-slate-700'
              ]}
            >
              <span>{category.name}</span>
              <span class="inline-flex items-center justify-center w-6 h-6 text-xs font-bold rounded-full bg-white/20">
                {getCategoryCount(category.id)}
              </span>
            </button>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Section 1: Custom 3D Modeling *************** -->
  <section class="py-16 md:py-20 bg-gray-50/50 dark:bg-slate-900/80">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">
          Custom 3D Modeling & Design
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          We bring your ideas to life — slide to see the transformation from digital design to printed product
        </p>
      </div>

      <!-- Models Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="models-grid">
        {modelProjects.map((project) => (
          <div 
            class="portfolio-item group relative bg-white dark:bg-slate-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
            data-categories={JSON.stringify(project.categories)}
          >
            <!-- Image Comparison Container -->
            <div class="aspect-video overflow-hidden">
              <ImageComparisonSlider
                id={project.id}
                title={project.title}
                description={project.description}
                beforeImage={project.afterImage}
                afterImage={project.beforeImage}
                beforeLabel="Design"
                afterLabel="Result"
              />
            </div>
            
            <!-- Content Info -->
            <div class="p-6">
              <h3 class="font-semibold text-xl mb-2 text-gray-900 dark:text-gray-100">
                {project.title}
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                {project.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section 2: Finished Products Gallery *************** -->
  <section class="py-16 md:py-20 bg-white/80 dark:bg-slate-800/90">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">
          Gallery of Creations
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Custom 3D printed products for gifts, branding, art, and more
        </p>
      </div>

      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-6" id="gallery-grid">
        {galleryItems.map((item, index) => (
          <div 
            class="portfolio-item group relative bg-white dark:bg-slate-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
            data-categories={JSON.stringify(item.categories)}
          >
            <!-- Image Container -->
            <div class="aspect-square overflow-hidden">
              <img 
                src={item.src} 
                alt={item.alt}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading={index < 4 ? 'eager' : 'lazy'}
              />
            </div>
            
            <!-- Content Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                <h3 class="font-semibold text-lg mb-1">
                  {item.title}
                </h3>
                <p class="text-sm text-gray-200">
                  {item.category}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works Section *************** -->
  <section class="py-16 md:py-20 bg-gray-50/50 dark:bg-slate-900/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">
          How It Works
        </h2>
