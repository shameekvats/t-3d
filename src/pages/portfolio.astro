</Layout>

<!-- Category Filtering Script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.category-filter');
    const portfolioItems = document.querySelectorAll('.portfolio-item');
    
    // Add click handlers to all filter buttons
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const selectedCategory = this.getAttribute('data-category');
        
        // Update active button styles
        filterButtons.forEach(btn => {
          if (btn === this) {
            btn.classList.remove('bg-gray-100', 'dark:bg-slate-800', 'text-gray-700', 'dark:text-gray-300');
            btn.classList.add('bg-primary', 'text-white', 'shadow-lg');
          } else {
            btn.classList.remove('bg-primary', 'text-white', 'shadow-lg');
            btn.classList.add('bg-gray-100', 'dark:bg-slate-800', 'text-gray-700', 'dark:text-gray-300');
          }
        });
        
        // Filter portfolio items with fade animation
        portfolioItems.forEach(item => {
          const itemCategories = JSON.parse(item.getAttribute('data-categories') || '[]');
          const shouldShow = selectedCategory === 'all' || itemCategories.includes(selectedCategory);
          
          if (shouldShow) {
            // Fade in
            item.style.opacity = '0';
            item.style.display = 'block';
            setTimeout(() => {
              item.style.transition = 'opacity 0.3s ease-in-out';
              item.style.opacity = '1';
            }, 10);
          } else {
            // Fade out
            item.style.transition = 'opacity 0.3s ease-in-out';
            item.style.opacity = '0';
            setTimeout(() => {
              item.style.display = 'none';
            }, 300);
          }
        });
      });
    });
  });
</script>

<!-- Filter Styles -->
<style>
  .portfolio-item {
    transition: opacity 0.3s ease-in-out;
  }
  
  #category-filters {
    -webkit-overflow-scrolling: touch;
  }
  
  @media (max-width: 640px) {
    #category-filters {
      overflow-x: auto;
      flex-wrap: nowrap;
      justify-content: flex-start;
      padding-bottom: 0.5rem;
      scrollbar-width: none; /* Firefox */
    }
    
    #category-filters::-webkit-scrollbar {
      display: none; /* Chrome, Safari */
    }
    
    .category-filter {
      flex-shrink: 0;
    }
  }
  
  .category-filter {
    cursor: pointer;
  }
  
  .category-filter:active {
    transform: scale(0.95);
  }
</style>
