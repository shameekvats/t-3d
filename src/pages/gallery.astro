---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Gallery â€” tattva-3d',
};

// Updated gallery items to match your actual business
const galleryItems = [
  {
    src: 'https://images.unsplash.com/photo-1581833971358-2c8b550f87b3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Custom gift items',
    title: 'Custom Gifts',
    description: 'Personalized 3D printed gifts for special occasions and celebrations'
  },
  {
    src: 'https://images.unsplash.com/photo-1578321272176-b7bbc0679853?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Business promotional materials',
    title: 'Business Branding',
    description: 'Keychains, membership cards, and promotional items for businesses'
  },
  {
    src: 'https://images.unsplash.com/photo-1573164713714-d95e436ab8d6?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: '3D filament art from photos',
    title: 'Creative Art',
    description: 'Transform your photos into unique 3D filament artwork'
  },
  {
    src: 'https://images.unsplash.com/photo-1565191999001-551c187427bb?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Miniature city models',
    title: 'Miniature Models',
    description: 'Custom city maps and historical landmark miniatures'
  },
  {
    src: 'https://images.unsplash.com/photo-1559085153-6e4ad5e6b0ed?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Display logos and lightboxes',
    title: 'Display Items',
    description: 'Custom lightboxes, display logos, and decorative pieces'
  },
  {
    src: 'https://images.unsplash.com/photo-1573408301185-9146fe634ad0?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Personalized keepsakes',
    title: 'Keepsakes',
    description: 'Memorable items and personalized collectibles'
  }
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">Gallery</Fragment>
    <Fragment slot="subtitle">
      Explore our collection of custom 3D printed gifts, branding materials, and creative pieces. 
      See how we transform ideas into unique, personalized items.
    </Fragment>
  </Hero>

  <!-- Gallery Section *************** -->
  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      
      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {galleryItems.map((item, index) => (
          <div class="group relative bg-white dark:bg-slate-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <!-- Image Container -->
            <div class="aspect-w-4 aspect-h-3 overflow-hidden">
              <img 
                src={item.src} 
                alt={item.alt}
                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                loading={index < 3 ? 'eager' : 'lazy'}
              />
            </div>
            
            <!-- Content Overlay -->
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {item.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                {item.description}
              </p>
            </div>
            
            <!-- Hover Overlay -->
            <div class="absolute inset-0 bg-blue-600 bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
              <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Call to Action -->
      <div class="text-center mt-16">
        <div class="bg-blue-50 dark:bg-slate-800 rounded-lg p-8">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Have an idea for a custom project?
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
            Whether it's a personalized gift, business promotional item, or creative keepsake, 
            we're here to bring your vision to life with 3D printing.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/t-3d/contact"
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition duration-150"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-4.126-.964L3 20l1.036-6.874A8.955 8.955 0 013 9c0-4.418 3.582-8 8-8s8 3.582 8 8z"></path>
              </svg>
              Share Your Idea
            </a>
            <a 
              href="mailto:t-3d@ik.me?subject=Custom Project Inquiry"
              class="inline-flex items-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-base font-medium rounded-lg text-gray-700 dark:text-gray-200 bg-white dark:bg-slate-700 hover:bg-gray-50 dark:hover:bg-slate-600 transition duration-150"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Email Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Create Section ******* -->
  <section class="py-16 md:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          What We Create
        </h2>
        <p class="text-xl text-muted dark:text-slate-300">
          From personalized gifts to business branding materials
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Custom Gifts -->
        <div class="bg-white dark:bg-slate-700 rounded-lg p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Personal Gifts</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">Unique presents for birthdays, anniversaries, and special occasions</p>
        </div>

        <!-- Business Materials -->
        <div class="bg-white dark:bg-slate-700 rounded-lg p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Business Branding</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">Promotional items, keychains, and display materials for your business</p>
        </div>

        <!-- Creative Art -->
        <div class="bg-white dark:bg-slate-700 rounded-lg p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
            </svg>
          </div>
          <h3 title="text-lg font-semibold mb-2">Creative Projects</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">Photo-to-3D art, miniature models, and unique decorative pieces</p>
        </div>
      </div>
    </div>
  </section>
</Layout>