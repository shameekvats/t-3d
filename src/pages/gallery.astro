---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Gallery — tattva-3d',
};

// Import your real images properly - ALL using the same format
import nishArt from '../assets/images/Gallery/Nish.jpeg';
import acRomaLogo from '../assets/images/Gallery/AC Roma.jpg';
import kohliKeepsake from '../assets/images/Gallery/Kohli.png';
import lowkeyLightbox from '../assets/images/Gallery/Low_Key lightbox.png';
import mouse from '../assets/images/Gallery/Mouse.jpg';
import cat from '../assets/images/Gallery/Cat.jpeg';

// Clean gallery with your real images
const galleryItems = [
  {
    src: nishArt.src,
    alt: 'Custom portrait artwork in 3D filament',
    title: 'Portrait Art',
    category: 'Creative Art'
  },
  {
    src: acRomaLogo.src,
    alt: 'AC Roma custom display logo',
    title: 'Team Logo Display',
    category: 'Display Items'
  },
  {
    src: kohliKeepsake.src,
    alt: 'Virat Kohli sports collectible',
    title: 'Sports Collectible',
    category: 'Keepsakes'
  },
  {
    src: lowkeyLightbox.src, // ✅ FIXED - Use .src from imported asset
    alt: 'Custom lightbox with LED lighting',
    title: 'Custom Lightbox',
    category: 'Branding'
  },
  {
    src: mouse.src, // ✅ FIXED - Use .src from imported asset
    alt: 'Custom wireless mouse design',
    title: 'Wireless Mouse',
    category: 'Electronics'
  },
  {
    src: cat.src, 
    alt: 'Funky Cat',
    title: 'Bookmark',
    category: 'Filament Painting'
  },
  {
    src: 'https://images.unsplash.com/photo-1565191999001-551c187427bb?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Miniature city model example',
    title: 'City Miniature',
    category: 'Mini Models'
  }
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">Gallery</Fragment>
    <Fragment slot="subtitle">
      Explore our collection of custom 3D printed products, ideal for gifts, branding materials, and creative pieces.
    </Fragment>
  </Hero>

  <!-- Gallery Section *************** -->
  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      
      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {galleryItems.map((item, index) => (
          <div class="group relative bg-white dark:bg-slate-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <!-- Image Container -->
            <div class="aspect-square overflow-hidden">
              <img 
                src={item.src} 
                alt={item.alt}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading={index < 4 ? 'eager' : 'lazy'}
              />
            </div>
            
            <!-- Content Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                <h3 class="font-semibold text-lg mb-1">
                  {item.title}
                </h3>
                <p class="text-sm text-gray-200">
                  {item.category}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Add More Coming Soon -->
      <div class="text-center mt-12">
        <div class="inline-flex items-center px-6 py-3 bg-gray-100 dark:bg-slate-700 rounded-full">
          <svg class="w-5 h-5 mr-2 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <span class="text-gray-600 dark:text-gray-300 font-medium">More awesome projects coming soon!</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-slate-800 dark:to-slate-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        Got an idea?
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        Whether it's a personal gift, something for your business, or just a fun project - 
        let's make it happen together!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/t-3d/contact"
          class="inline-flex items-center px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-4.126-.964L3 20l1.036-6.874A8.955 8.955 0 013 9c0-4.418 3.582-8 8-8s8 3.582 8 8z"></path>
          </svg>
          Let's Chat
        </a>
        <a 
          href="mailto:t-3d@ik.me?subject=Custom Project Idea&body=Hi!%0D%0A%0D%0AI have a cool idea for a 3D print:%0D%0A%0D%0A[Describe your idea here]%0D%0A%0D%0ALooking forward to hearing from you!"
          class="inline-flex items-center px-8 py-3 bg-white hover:bg-gray-50 text-gray-700 font-medium rounded-lg border border-gray-200 transition duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Send Email
        </a>
      </div>
    </div>
  </section>
</Layout>